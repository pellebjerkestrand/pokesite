{
  "name": "pokesite",
  "version": "1.0.0",
  "description": "PoC for sliced web app on Azure Functions",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "scripts": {
    "build": "node build/build",
    "build:client": "node build/build-client",
    "build:server": "node build/build-server",
    "clean": "rimraf ../dist ../dist-test",
    "dev": "run-s build && run-p watch start",
    "init": "node ../scripts/init-local-settings",
    "start": "func start --script-root ../dist",
    "test": "playwright test",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "tsc --noEmit --project tsconfig.client.json",
    "typecheck:server": "tsc --noEmit --project tsconfig.server.json",
    "watch": "nodemon build/build"
  },
  "author": "Pelle Bjerkestrand",
  "license": "UNLICENSED",
  "devDependencies": {
    "@azure/functions": "^3.0.0",
    "@playwright/test": "^1.22.2",
    "@types/glob": "^7.2.0",
    "@types/node": "^16.11.38",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "@types/serialize-javascript": "^5.0.2",
    "autoprefixer": "^10.4.7",
    "azure-functions-core-tools": "^4.0.4483",
    "esbuild": "^0.14.39",
    "esbuild-plugin-import-glob": "^0.1.1",
    "esbuild-plugin-manifest": "^0.5.0",
    "esbuild-sass-plugin": "^2.2.6",
    "glob": "^8.0.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "^1.22.2",
    "postcss": "^8.4.14",
    "rimraf": "^3.0.2",
    "type-fest": "^2.13.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@redis/client": "^1.1.0",
    "node-fetch": "^3.2.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "serialize-javascript": "^6.0.0",
    "ts.data.json": "^2.1.0"
  }
}
